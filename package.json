{
  "name": "@pizzaton/pizzabox",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Typescript sdk to interact with PizzaBox (PizzaTon Jetton Locker Service on TON blockchain)",
  "keywords": [
    "demo",
    "typescript"
  ],
  "homepage": "https://github.com/mhbdev/pizzabox-sdk",
  "bugs": {
    "url": "https://github.com/mhbdev/pizzabox-sdk/issues"
  },
  "author": "Mahdi Bagheri (MonoBit)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mhbdev/pizzabox-sdk.git"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup",
    "dev": "vitest",
    "local-release": "changeset version && changeset publish",
    "ci": "npm run build && npm run check-format && npm run check-exports && npm run lint",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check-exports": "attw --pack .",
    "lint": "tsc",
    "test": "vitest run",
    "prepublishOnly": "npm run ci"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    }
  },
  "type": "module",
  "dependencies": {
    "@ton-api/client": "^0.1.1",
    "@ton/core": "^0.59.0",
    "@ton/crypto": "^3.3.0",
    "@ton/ton": "^15.1.0",
    "buffer": "^6.0.3",
    "tonweb": "^0.0.66"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.16.4",
    "@changesets/cli": "^2.27.9",
    "prettier": "^3.3.3",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.2"
  }
}
